<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span><%= pluralize(current_user.microposts.count,"micropost") %> </span> 
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <% if !current_user?(@user) && logged_in? %>
      <section class="message_box">
        <div id="nessages">
          <%= render @messages %>
        </div>
      </section>
      <script tupe="text/javascript">
        var height = 0;
        $("div.message").each(function() {
          height += ($(this).height());
        });
      </script>
      <div class="message_form">
        <%= render 'messages/message_form',
        {from_user: current_user, to_user: @user, room_id: @room_id} %>
      </div>
    <% end %>
  </aside>

  <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <%# 「count」はデータベースの代わりに計算して、特定のuser_idに紐付いたマイクロポストの数をデータベースに問い合わせる %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
      <%# userコントローラからマイクロポストをページネーションしたいため@micropost変数を渡してる %>
    <% end %>
  </div>
</div>